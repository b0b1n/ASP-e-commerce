@model MonPCapplication.Models.ClientRegistration

@{
    ViewBag.Title = "Registration";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal p-3 align-middle col-12 m-5 bg-light  border border-2 ">
        <h4 class="m-2 mt-4" align="center">Page de registration</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2 fw-bold mb-2 ms-5 ">Username : </label>
            <div class="col-md-6 ms-5 ">
                @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2 fw-bold mb-2 ms-5 ">Nom : </label>
            <div class="col-md-6 ms-5">
                @Html.EditorFor(model => model.nom, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2 fw-bold mb-2 ms-5 ">Prénom : </label>
            <div class="col-md-6 ms-5">
                @Html.EditorFor(model => model.prenom, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.prenom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2 fw-bold mb-2 ms-5 ">e-mail électronique : </label>
            <div class="col-md-6 ms-5">
                @Html.EditorFor(model => model.mail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.mail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2 fw-bold mb-2 ms-5 ">Adresse : </label>
            <div class="col-md-6 ms-5">
                @Html.EditorFor(model => model.adresse, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.adresse, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2 fw-bold mb-2 ms-5 ">Numero du télephone : </label>
            <div class="col-md-6 ms-5">
                @Html.EditorFor(model => model.telephone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.telephone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2 fw-bold mb-2 ms-5 ">Budget : </label>
            <div class="col-md-6 ms-5">
                @Html.EditorFor(model => model.Budget, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Budget, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2 fw-bold mb-2 ms-5 ">Créer votre Mot de pass : </label>
            <div class="col-md-6 ms-5" align="center">
                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2 fw-bold mb-2 ms-5 w-100">Confirmez votre Mot de pass : </label>
            <div class="col-md-6 ms-5">
                @Html.EditorFor(model => model.Confirmpassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Confirmpassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-3" align="center">
            <div class="col-md-offset-2 col-md-12 w-100">
                <input type="submit" value="Créer mon compte" class="btn btn-default bg-info text-white fw-bold ps-5 pe-5" />
            </div>
        </div>
        <div align="center" class="mt-3 pt-3">
            <a href='@Url.Action("Login", "Account")' class="fw-bold ">Se connecter</a>
        </div>
    </div>
}

