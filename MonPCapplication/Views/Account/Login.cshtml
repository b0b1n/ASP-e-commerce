@model MonPCapplication.Models.AccountLogin

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal p-3 align-middle col-12 m-5 bg-light  border border-2 ">
        <h4 class="m-2 mt-4" align="center">Page de Connexion</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2 fw-bold mb-2 ms-5 ">Username : </label>
            <div class="col-md-12" align="center">
                @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control w-50 mb-3" } })
                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2 fw-bold mb-2 ms-5 ">Mot de pass : </label>
            <div class="col-md-12" align="center">
                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control w-50 mb-3" } })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mb-2" align="center">
            <div class="col-md-6 w-100" align="center">
                <div class="checkbox">
                    @Html.EditorFor(model => model.RememberMe)
                    @Html.ValidationMessageFor(model => model.RememberMe, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6 w-100">
                @Html.LabelFor(model => model.RememberMe, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
        </div>

        <div class="form-group" align="center">
            <div class="col-md-offset-2 col-md-12 w-100">
                <input type="submit" value="Login" class="btn btn-default bg-info text-white fw-bold ps-5 pe-5" />
            </div>
        </div>
        <div align="center" class="mt-3 pt-3">
            <a href='@Url.Action("Registration", "Account")' class="fw-bold "  >Créer un compte </a>
        </div>
    </div>
}
